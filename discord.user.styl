      [class *= 'lookOutlined-'] {
        c: $lighter $darker $darker;
        box-shadow: $bshadow;
        &:hover { c: $light }
      }
      /// Activity section.
      [class*="activityUserPopout"] {
        border-top: 1px solid $darker;
        c: 0 0 $t;
