      [class*="selected-"] {
        background: linear-gradient(90deg, $t, $darker);
      }
    }
  }

  // Popouts -> User popout.
  [class *= 'userPopout-'] {
    border: 1px solid $darker;
    c: 0 0 $dark;
    box-shadow: $bshadow;
    [class *= 'headerText-'] {
      [class *= 'username-']:not(#z) { c: $light }
      [class *= 'Tag'] { c: $lighter }
    }
