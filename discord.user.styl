    [class*="desc-"] { colors: $lighter, 0, 0; }
    [class*="anchor-"] { colors: $accent, 0, 0; }
    [class*="checkbox-"] {
      colors: 0, $dark, 0;
      &[class*="checked-"] { colors: 0, 0, $dark; }
    }
    // Main cards.
    &[class*="cardPrimary"] {
      radius: $radius;
      colors: 0 $darker $dark;
      &[style*="114\, 137\, 218"] { colors: 0 $accent 0 }
