    > [class^="inner"] {
      colors: 0, 0, $dark;
      border-radius: $radius;
      border: 1px solid $darker;
      &[class*="innerAutocomplete-"] { border-radius: 0 0 $radius $radius; }
    }
    // Input text color.
    textarea { colors: $light, 0, 0; }
    // Dividers.
    [class*="divider"], [class*="Divider"] { colors: 0, 0, $darker; }
